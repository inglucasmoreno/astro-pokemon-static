---
import type { GetStaticPaths } from "astro";
// Codigo de servidor - Server Side Only - Si no hay integraciones se ejectua en tiempo de construccion
import PokemonCard from "@components/pokemons/PokemonCard.astro";
import type { PokemonListResponse } from "@interfaces/pokemon-list.response";
import MainLayout from "@layouts/MainLayout.astro";
import Title from "@components/shared/Title.astro";

export const getStaticPaths = ( async ({paginate}) => {
	const resp = await fetch("https://pokeapi.co/api/v2/pokemon?limit=151");
	const { results } = (await resp.json()) as PokemonListResponse;
	return paginate(results, {pageSize: 20})
}) satisfies GetStaticPaths;

const { page } = Astro.props;

---

<MainLayout title="Home Page">
	<Title>
		Listado paginado
	</Title>
	<section 
		aria-label="Listado de pokemons"
		class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-5 gap-4 mt-5"
		>
		{
			page.data.map((pokemon) => (
				<PokemonCard url={pokemon.url} name={pokemon.name} />
			))
		}
	</section>
	<section 
		class="flex mt-10 gap-2 items-center">
		

		<a 
			class:list={[
				"btn",
				{
					disabled: !page.url.prev
				}
			]} 
			href={page.url.prev}> 
			Anteriores 
		</a>

		<a 
			class:list={[
				"btn",
				{
					disabled: !page.url.next
				}
			]} 
			href={page.url.next}> 
			Siguiente
		</a>
				
		<div class="flex flex-1"></div>
		
		<span class="text-xl font-bold"> Pagina { page.currentPage } </span>

	</section>
</MainLayout>

<style>
	.btn {
		@apply bg-blue-500 p-2 text-white rounded-md;    
	}

	.disabled {
		@apply bg-gray-600 text-gray-400;    
	}
</style>
